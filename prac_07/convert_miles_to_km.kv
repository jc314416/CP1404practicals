BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34.00'
            size_hint_x: 2
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up
                text: 'Up'
                font_size: 20
                on_press: app.handle_increment(+1)
            Button:
                id: down
                text: "Down"
                font_size: 20
                on_press: app.handle_increment(-1)
